<p id="notice"><%= notice %></p>

<h1 align="center">Cálculo de Toners</h1>
<hr width="50%">
<br>
<table class="responsive-table centered highlight">
  <thead>
    <tr>
      <th>Primeiro Rendimento</th>
      <th>Segundo Rendimento</th>
      <th>Primeira Produção</th>
      <th>Segunda Produção</th>
      <th>Preço Página Contrato</th>
      <th>Área de Cobertura Total</th>
      <th>Preço Página Atualizado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cals.each do |cal| %>
      <tr>
        <td><%= cal.ryieldi %></td>
        <td><%= cal.ryielde %></td>
        <td><%= cal.prodi %></td>
        <td><%= cal.prode %></td>
        <td>R$<%= cal.pprice.round(5) %></td>
        <td><%= cal.cover.round(4) %>%</td>
        <td><%= cal.rprice.round(5) %></td>
        <td><%= link_to '<i class="material-icons">remove_red_eye</i>'.html_safe, cal, class:"waves-effect waves-light btn-small light-blue" %></td>
        <td><%= link_to '<i class="material-icons">edit</i>'.html_safe, edit_cal_path(cal), class:"waves-effect waves-light btn-small light-orange" %></td>
        <td><%= link_to '<i class="material-icons">cancel</i>'.html_safe, cal, class:"waves-effect waves-light btn-small red", method: :delete, data: { confirm: 'Deseja realmente excluir este registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div align="center">
<%= link_to '<i class="material-icons">add</i>'.html_safe, new_cal_path, class:"btn-floating btn-large waves-effect waves-light green" %>
</div>